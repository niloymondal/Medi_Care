<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/PatientChangedFirstNameID"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="First name"
            android:textColorHint="#2CA7E0"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit"
            android:padding="20dp"
            />
        <EditText
            android:id="@+id/PatientChangedLastNameID"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:textColorHint="#2CA7E0"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit"
            android:padding="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/PatientChangedAgeID"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:textColorHint="#2CA7E0"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit"
            android:padding="20dp"
            android:layout_marginBottom="10dp"
            />

</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:text="Which of the following diseases do you suffer from ?"
        android:textSize="15dp"/>
    <CheckBox
        android:id="@+id/highChangedBpID"
        android:layout_marginLeft="40dp"
        android:textColor="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Blood Pressure"
        android:textSize="15dp"
        />
    <CheckBox
        android:id="@+id/LowBpChangedID"
        android:layout_marginLeft="40dp"
        android:textColor="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low Blood Pressure"
        android:textSize="15dp"
        />
    <CheckBox
        android:id="@+id/DiabetesChangedID"
        android:layout_marginLeft="40dp"
        android:textColor="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diabetes"
        android:textSize="15dp"
        />
    <CheckBox
        android:id="@+id/AsthmaChangedID"
        android:layout_marginLeft="40dp"
        android:textColor="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asthma"
        android:textSize="15dp"
        />
    <CheckBox
        android:id="@+id/heartDiseaseChangedID"
        android:layout_marginLeft="40dp"
        android:textColor="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Disease"
        android:textSize="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/PatinetUpdateChangeButtonID"
            android:layout_width="0dp"
            android:onClick="updateFromAleartBox"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Update"
            android:textColor="#fff"
            android:background="@drawable/button"
            />
        <Button
            android:id="@+id/doctorCancleChangeButtonID"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:onClick="CancelButtonOnDialog"
            android:layout_gravity="center"
            android:text="Cancle"
            android:textColor="#fff"
            android:background="@drawable/button"
            />


    </LinearLayout>

</LinearLayout>